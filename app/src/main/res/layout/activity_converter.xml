<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_dace2f170d8d829b08db15e52002e75"
    tools:context=".converter">

    <Button
        android:id="@+id/btnConData"
        android:layout_width="115dp"
        android:layout_height="57dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/cicle"
        android:backgroundTint="#000000"
        android:text="@string/convert"
        android:textColor="#F4F1F1"
        android:textColorLink="#E8E8E8"
        app:layout_constraintBottom_toTopOf="@+id/tvShowData"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/span" />

    <EditText
        android:id="@+id/etconvert"
        android:layout_width="141dp"
        android:layout_height="55dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="23dp"
        android:background="@drawable/cicle"
        android:backgroundTint="#9A0608"
        android:ems="10"
        android:hint="@string/enter"
        android:inputType="phone"
        android:textAlignment="center"
        android:textColor="#FFFCFC"
        android:textColorHint="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/span"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tvShowData"
        android:layout_width="212dp"
        android:layout_height="50dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="250dp"
        android:background="@drawable/cicle"
        android:backgroundTint="#030833"
        android:text="@string/output"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnConData" />

    <Spinner
        android:id="@+id/span"

        android:layout_width="210dp"
        android:layout_height="56dp"

        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/cicle"
        android:backgroundTint="#FFFFFF"
        android:entries="@array/arrayKG"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/btnConData"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etconvert" />

    <Button
        android:id="@+id/button5"
        android:layout_width="70dp"
        android:layout_height="34dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="59dp"
        android:background="@drawable/as"
        android:backgroundTint="#020A36"
        android:onClick="home"
        android:text="@string/back"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnConData"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="170dp"
        android:layout_height="51dp"
        android:layout_marginTop="85dp"
        android:layout_marginBottom="4dp"
        android:text="@string/converter"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/etconvert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>